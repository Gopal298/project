	<% if @post.errors.any? %>
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
	<% end %>
	<%= form_for @post do |f| %>
	  	<%= f.label :Name %>
	  	<%= f.text_field :name %>
	  
	  	<%= f.label :Description %>
	  	<%= f.text_field :description %>
	
	  	<%= f.submit %>
	<% end %>